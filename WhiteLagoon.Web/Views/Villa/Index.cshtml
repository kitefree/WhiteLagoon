@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>

<h1>Villa List</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Sqft</th>
            <th>Occupancy</th>
            <th>Image</th>
            <th>Created Date</th>
            <th>Updated Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Name</td>
                <td>@room.Description</td>
                <td>@room.Price</td>
                <td>@room.Sqft</td>
                <td>@room.Occupancy</td>
                <td>
                    <img src="@room.ImageUrl" alt="Room Image" width="50" height="50" />
                </td>
                <td>@room.CreatedDate?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@room.UpdatedDate?.ToString("yyyy-MM-dd HH:mm:ss")</td>
            </tr>
        }
    </tbody>
</table>